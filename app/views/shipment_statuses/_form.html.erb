<%= form_for(@shipment_status) do |f| %>
  <br />
  <br />
  <div class="form-group row">
    <div class="col-sm-1">
      <label for="inputShipmentId" class="control-label vmiddle">Shipment ID</label>
    </div>
    <div class="field col-sm-5 row">
      <%= f.text_field :shipment_id, :class => "form-control", :id => "inputShipmentId", :placeholder => "Please the ID" %>
    </div>
  </div>
<div class="form-group row">
  <div class="field col-sm-5 row">
    <%= f.text_field :status, :class => "form-control", :id => "inputStatus", :placeholder => "Please indicate a current status" %>
  </div>
</div>
<div class="actions form-group row">
  <div class="field col-sm-6">
    <%= f.submit "Create", :class => "btn btn-primary" %>&nbsp;&nbsp;&nbsp;
    <%= link_to 'Back', shipments_path, :class => "vbottom" %>
  </div>
</div>
<% end %>
