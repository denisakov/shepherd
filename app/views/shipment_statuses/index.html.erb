<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipment_statuses.each do |shipment_status| %>
      <tr>
        <td><%= shipment_status.title %></td>
        <td><%= link_to 'Show', shipment_status %></td>
        <td><%= link_to 'Edit', edit_shipment_status_path(shipment_status) %></td>
        <td><%= link_to 'Destroy', shipment_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

