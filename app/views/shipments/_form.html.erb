<%= form_for(@shipment, :validate => true, :class => "form-horizontal", :role => "form") do |f| %>
<div class="form-group row">
  <div class="col-sm-1">
    <label for="inputTitle" class="control-label vmiddle">Title</label>
  </div>
  <div class="field col-sm-5 row">
    <%= f.text_field :title, :class => "form-control", :id => "inputTitle", :placeholder => "Please type a short title for this shipment" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-1">
    <label for="inputVessel" class="control-label vmiddle">Vessel</label>
  </div>
  <div class="field col-sm-5 row">
    <%= f.text_field :vessel_id, :class => "form-control", :id => "inputVessel", :placeholder => "Choose the vessel"  %>
  </div>
</div>
<div class="actions form-group row">
  <div class="field col-sm-6">
    <%= f.submit "Update", :class => "btn btn-lg btn-primary" %>&nbsp;&nbsp;&nbsp;
    <%= link_to 'Back', shipments_path, :class => "vbottom" %>
  </div>
</div>
<% end %>
