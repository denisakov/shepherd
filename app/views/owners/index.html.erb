<% title "Owners" %>

<div class="table-responsive">
  <table class="table table-hover table-condensed" >
    <thead>
      <tr>
        <th class="small col-xs-3">Name</th>
        <th class="small col-xs-3">Vessels</th>
        <th class="small col-xs-3">Contact</th>
        <th class="small col-xs-5">Notes</th>
        <th class="small col-xs-1"></th>
      </tr>
    </thead>    
    <tbody>
      <% @owners.each do |owner| %>
        <tr data-link="row" class="rowlink">
          <td><h4><%= link_to owner.name, owner_path(owner) %></h4><small><%= owner.rus_name %></small></td>
          <td><%= owner.vessels.all.count %></td>
          <td><%= owner.contact %></td>
          <td><small><%= owner.notes %></small></td>
          <td class="rowlink-skip hidden-print"><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>